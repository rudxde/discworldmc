    "express": "^4.18.2",
    "json5": "^2.2.3",
    "minecraft-protocol": "^1.26.5",
    "mustache": "^4.2.0",
    "redis": "^4.6.14",
    "reflect-metadata": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jasmine": "^5.1.2",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.14.6",
    "@types/redis": "^4.0.11",
    "@typescript-eslint/eslint-plugin": "^5.59.9",
    "@typescript-eslint/eslint-plugin-tslint": "^6.21.0",
    "@typescript-eslint/parser": "^5.62.0",
    "eslint": "^8.48.0",
    "jasmine": "^5.1.0",
    "nyc": "^15.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "publishConfig": {
    "access": "public"
